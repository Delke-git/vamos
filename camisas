if(a+1<=9&&m[a+1][b]==1) {
			 m[a+1][b]=0;
			 return funcao(m, a+1, b);
		}else if(b+1<=9&&m[a][b+1]==1) {
			m[a][b+1]=0;
			return funcao(m, a, b+1);
		}else if(a-1>=0&&m[a-1][b]==1) {
			m[a-1][b]=0;
			return funcao(m, a-1, b);
		}else if( b-1>=0&&m[a][b-1]==1) {
			m[a][b-1]=0;
			return funcao(m, a, b-1);
		}
